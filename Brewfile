cask 'dropbox'
cask 'google-chrome'
cask 'google-drive'
cask 'iterm2'
cask 'sourcetree'
cask 'spotify'
cask 'the-unarchiver'
cask 'vlc'

# Fonts
cask 'font-source-code-pro'
