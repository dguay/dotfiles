# Shortcuts
alias la="ls -laF"
alias -g G="| grep"
alias h="history"
alias ..="cd .."
alias ~="cd ~"
alias q="~ && clear"
alias clr="clear"

alias copyssh="pbcopy < $HOME/.ssh/id_rsa.pub"
alias reloadcli="source $HOME/.zshrc"

# Git
alias glom="gl origin master"

# Directories
alias dotfiles="cd $DOTFILES"

# Config files
alias zshconfig="vim ~/.dotfiles/zshrc"

# Meteo
alias meteo="curl wttr.in/quebec"

# Functions

function findstring() {
  grep -rnw $2 -e $1
}

